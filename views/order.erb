<div class="container" id="orderApp" ng-controller="orderCtrl as ctrl">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Portfolio</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
    </div>
    <div class="row">
        <div
          ng-repeat="recipe in ctrl.recipes"
          class="col-md-4 col-sm-6 portfolio-item">
            <a href="#thai" class="portfolio-link" data-toggle="modal">
                <div class="portfolio-hover">
                    <div class="portfolio-hover-content">
                        <i class="fa fa-eye fa-3x"></i>
                    </div>
                </div>
                <img ng-src="{{ recipe.image }}" class="img-responsive" alt="">
            </a>
            <div class="portfolio-caption">
                <div class="row">
                  <span>{{ recipe.name }}</span>
                </div>
                <div class="row"></div>
                  <select
                    ng-init="serving=recipe.serving_options[0]"
                    ng-model="serving"
                    ng-options="tuple for tuple in recipe.serving_options"></select>
                  <span class="pull-right fa fa-shopping-cart">Add to cart</span>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
  angular.module('orderApp', [])
  .controller('orderCtrl', function($http, $timeout) {
    var ctrl = this;

    ctrl.recipes = [
      {
        name: 'Thai Tofu Quinoa Bowls',
        image: '/img/recipes/thai.jpg',
        serving_options: [
          '4 servings for $30',
          '6 servings for $40'
        ]
      }
    ];
  })

  angular.bootstrap(angular.element(document.getElementById('orderApp')), ['orderApp'])
</script>